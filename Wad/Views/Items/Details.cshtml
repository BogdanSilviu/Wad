<body>



    <div class="container mt-5">
        <div class="row ">
            <div class="col-sm-4 containerInfo">
                <img src="~/imgs/@Model.Photo" class="img img-fluid mx-3 rounded" alt="Cinque Terre">
            </div>
            <div class="col-sm-4 w-50">
                <h2>@Model.Name</h2>
                <p>@Model.Description</p>

                <div class="row ">
                    <div>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
                            See highest bid
                        </button>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back</a>
                    </div>

                    
                    <!-- The Modal -->
                    <div class="modal" id="myModal">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">@Model.Name</h4>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body">
                                    Current price is @ViewBag.HighestBid

                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <div class="row">
                                        <div class="col">
                                            <form method="post"  >
                                                <input type="number" name="price" min=@(ViewBag.HighestBid+1) />
                                                <input asp-action="AddBid" type="submit" value="Bid" class="btn btn-primary"  asp-route-itemId=@Model.Id />
                                            </form>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>

</body>
